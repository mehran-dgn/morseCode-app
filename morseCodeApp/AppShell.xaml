<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="morseCodeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:morseCodeApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Create Morse Code"
        ContentTemplate="{DataTemplate views:MorseGenerator}"/>
        <ShellContent 
     Title="Learn"
     ContentTemplate="{DataTemplate views:Learn}"
     />
        <ShellContent 
            Title="Decrypt Morse Code"    
            ContentTemplate="{DataTemplate views:MorseDecrypt}"
        />

       
    </TabBar>


</Shell>
